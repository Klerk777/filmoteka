{{#each this}}
  <li class='card__item'>
    <div class='thumb'>
      <img
        src='https://image.tmdb.org/t/p/w500{{poster_path}}'
        alt='{{title}}'
        data-id='{{filmId}}'
        onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';"
      />
    </div>

    <h2 class='card__title'>
      {{title}}
    </h2>
    <p class='card__text'>
      {{#each genres}}
        <span>
          {{name}}
        </span>
      {{/each}}
      |
      <span>
        {{release_date}}
      </span>
    </p>
  </li>
{{/each}}